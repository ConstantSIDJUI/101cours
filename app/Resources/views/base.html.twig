        </header>
        <!-- END WEB HEADER -->
        
        <!-- MOBILE HEADER -->
        <div class="all-header">
            <div class="mobile-header">
                <div class="navmobile"><a  onclick="document.getElementById('mobilekaml').style.display='block'"><i class="fa fa-bars" aria-hidden="true"></i></a></div>
                <a href="index.php"><div class="logomobile"></div></a>
            </div>
            <!--  END MOBILE HEADER -->
            <!-- DONNER UN COURS -->
            {% block content %}{% endblock %}           
            <!-- END OF DONNER UN COURS -->
            <div class="footer">
                <div class="container">
                    <div class="allwstnav">
                        <div class="suivre">
                            <div class="socials">
                                <span><a class="fb" href=""><i class="fa fa-facebook" aria-hidden="true"></i></a></span>
                                <span><a class="ytb" href=""><i class="fa fa-youtube-play" aria-hidden="true"></i></a></span>
                                <span><a style='margin-right:0px;' class="link" href=""><i class="fa fa-linkedin" aria-hidden="true"></i></a></span>
