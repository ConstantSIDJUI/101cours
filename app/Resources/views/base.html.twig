                    </div>
                </div>
                <div class="copyright">
                    <span style="float:left;">www.101cours.com - 2016 Tous droits réservés</span>
                    <span class="card">
                        <img src="{{ asset('bundles/pages/img/master.png') }}" />
                        <img src="{{ asset('bundles/pages/img/visa.png') }}" />
                    </span>
                </div>
            </div>
        </div>
    <!-- END ALL HEADER -->
    </div>
    {% block javascripts %}
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
        <script src="https://use.fontawesome.com/0499449a83.js"></script>
        <script>
            $(window).scroll(function() {
                if ($(this).scrollTop() > 1){
                    $('.autre-header').addClass("stickyautre");
                }
                else{
                    $('.autre-header').removeClass("stickyautre");
                }
            });
            
            $(window).scroll(function() {
                if ($(this).scrollTop() > 1){
                    $('header').addClass("sticky");
                    $('.logo').addClass("kaplogo");
                    $('.seconecter').addClass("seconecterscroll");
                }
                else{
                    $('header').removeClass("sticky");
                    $('.logo').removeClass("kaplogo");
                    $('.seconecter').removeClass("seconecterscroll");
                }
            });
            $(window).scroll(function() {
                if ($(this).scrollTop() > 1){
                    $('.mobile-header').addClass("sticky");
                    $('.logomobile').addClass("kaplogomobile");
                    $('.sincriremobile').addClass("sincriremobilescroll");
                    $('.navmobile').addClass("navmobilec");
                }
                else{
                    $('.mobile-header').removeClass("sticky");
                    $('.logomobile').removeClass("kaplogomobile");
                    $('.sincriremobile').removeClass("sincriremobilescroll");
                    $('.navmobile').removeClass("navmobilec");
                }
            });
            $(document).ready(function(){
            $(".connectead").hide();
            $(".profilpic").click(function(){
            $(".connectead").toggle();
            });
            $(span).click(function(){
            $(".connectead").hide();
            });
            });
        </script>
    {% endblock %}
</body>
</html>
