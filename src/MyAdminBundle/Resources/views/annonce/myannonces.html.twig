{% extends 'MyAdminBundle::Layout_My_Admin.html.twig' %}
    
{% block javascripts %}
    {{ parent() }}
{% endblock %}
    
{% block title %}
    {{ parent() }}
{% endblock %}
    
    
{% block content_my_admin %}
    <div class="autre-wrapper">
        <div class="container">
            {% include 'MyAdminBundle:infos:rightMenu.html.twig' %}
            <div class="right-side-back">
                <div class="histo">Historique des annonces</div>
                {% for annonce in annonces %}
                    <div class="profil-c1">
                        <div class="lesinfosb1">
                            <div class="b1pdp">
                                <img src="{% if app.user.avatar is not empty %}{{ asset('bundles/101cours/avatar/' ~ app.user.avatar.name ~ '.' ~ app.user.avatar.extension) }}{% else %}{{ asset('bundles/pages/img/user_default.png') }}{% endif %}" />
                            </div>
                            <span style="    font-size: 23px; " >{{ app.user.firstname }} {{ app.user.lastname }} <i style="color:#64b93a;" class="fa fa-check-circle" aria-hidden="true"></i></span>
                        </div>
                        <div class="alaibfo9c1">
                            <div class="m3lb1">
                                {% set jour = 'now'|date('d - m -Y') -  annonce.createdDate|date('d - m -Y') %}
                                <h3><b>Cours de {{annonce.cours.libelle}}</b></h3>
                                <p>Offe publiée depuis {{jour}} jour{% if jour > 1 %}s{% endif %}</p>
                                <p>Statut de l'annonce : expiré</p>
                            </div>
                            <div class="prixc1">
                                <div class="ofrec1">{{annonce.annonce.tarif30}}DH/h <span class="swy3">30H</span></div>
                                <div class="ofre2">{{annonce.annonce.tarif16}}DH/h <span class="swy32">16H</span></div>
                                <div class="ofre2">{{annonce.annonce.tarif10}}DH/h <span class="swy32">10H</span></div>
                            </div>
                        </div>
                        <div class="alaibtht">
                            {% if annonce.activated %}
                                <a href="{{ path('my_admin_publier_annonce_desactive', { 'id': annonce.id }) }}" class="ab1">Annuler le cours</a>
                            {% else %}
                                <a href="{{ path('my_admin_publier_annonce_active', { 'id': annonce.id }) }}" class="ab1">Activer le cours</a>
                            {% endif %}
                        </div>

                    </div>
                {% else %}
                        Aucune annonce
                {% endfor %}  
                    
                <div class="numerotation">
                    <span class="shm"><i class="fa fa-chevron-left" aria-hidden="true"></i></span>
                    <span><a href="">1</a></span>
                    <span><a href="" >2</a></span>
                    <span><a href="" style="border-right:none;">3</a></span>
                    <span style="margin-left:10px;" class="shm"><i class="fa fa-chevron-right" aria-hidden="true"></i></span>
                </div>
                    
            </div>
                
        </div>
    </div>
{% endblock %}