{% extends 'MyAdminBundle::Layout_My_Admin.html.twig' %}
    
{% block javascripts %}
    {{ parent() }}
{% endblock %}
    
{% block title %}
    {{ parent() }}
{% endblock %}
    
    
{% block content_my_admin %}
    <div class="autre-wrapper">
        <div class="container">
            <div class="left-side-back">
                <a href="{{ path('my_boite_reception') }}"><span><b>Boite de réception</b></span></a>
                <a href=""><p>Archivés</p></a>
            </div>
                
            <div class="right-side-back">
                <div class="histo">Historique des archives</div>
                {% for message in messages %}
                    <div style="margin:0px;margin-bottom:20px !important;" class="verifications-box">
                        <div  class="new-title">
                            {{ message.subject }}
                        </div>
                        <div class="new-rowe1">
                            <p>
                                {{ message.content }}
                            </p>
                            <div class="e1btns">
                                {#<span class="float-left">{{ message.demande.dateUpdate | date('d/m/Y') }}</span>#}
                                <a href="{{ path('my_admin_delete_message', { 'id': message.id }) }}" class="e1btn">Supprimer</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                        Aucune message
                {% endfor %} 
                    
                <div class="numerotation">
                    <span class="shm"><i class="fa fa-chevron-left" aria-hidden="true"></i></span>
                    <span><a href="">1</a></span>
                    <span><a href="" >2</a></span>
                    <span><a href="" style="border-right:none;">3</a></span>
                    <span style="margin-left:10px;" class="shm"><i class="fa fa-chevron-right" aria-hidden="true"></i></span>
                </div>
                    
            </div>  
        </div>
            
    </div>
</div>
{% endblock %}